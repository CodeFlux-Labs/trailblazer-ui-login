{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react-native",
        "strict": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["./types", "./node_modules/@types"],
        "paths": {
            "@/*": ["./*"],
            "@components/*": ["src/components/*"],
            "@screens/*": ["src/screens/*"],
            "@hooks/*": ["src/hooks/*"],
            "@context/*": ["src/context/*"],
            "@utils/*": ["src/utils/*"],
            "@assets/*": ["src/assets/*"],
            "@realmDB/*": ["src/realmDB/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js"]
}
